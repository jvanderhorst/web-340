<% include header %>
<% include navbar %>

<div id="employee-record">
        <div class="container">
            <% if (employees.length) { %>
                <h2>-- Employee Listing --</h2><br />
                <a href="new.ejs">Add New</a>
                <table class="table table-hover">
                    <thead class="thead-dark">
                    <tr>
                        <th>Name</th>
                        <th>Functions</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% employees.forEach(function (entry) { %>
                    <tr>
                        <td><%= entry.name %></td>
                        <td><a href="view.ejs/<%=entry.name %>">VIEW</a></td>
                    </tr>
                    </tbody>
                    <% }) %>
                </table>
                <% } else { %>
                No entries! <a href="new.ejs">Add one!</a>
                <% } %>
            
                <br/>
        </div>
    </div>

<% include footer %>
<% include scripts %>
